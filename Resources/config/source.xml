<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="fos_elastica.config_source.container" class="FOS\ElasticaBundle\Configuration\Source\ContainerSource" public="false">
            <argument type="collection" /> <!-- index configs -->
            <tag name="fos_elastica.config_source"/>
        </service>

        <service id="fos_elastica.config_source.template_container" class="FOS\ElasticaBundle\Configuration\Source\TemplateContainerSource" public="false">
            <argument type="collection" /> <!-- index configs -->
            <tag name="fos_elastica.config_source" source="index_template"/>
        </service>
    </services>
</container>
